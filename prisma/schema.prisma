generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id           String   @id @default(cuid())
  name         String?
  email        String?  @unique
  phone        String?  @unique
  passwordHash String
  role         UserRole
  isActive     Boolean  @default(true)
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  refreshTokens RefreshToken[]
  taughtClasses Class[]        @relation("TeacherClasses")
  guardianInfo  Guardian?

  @@map("users")
}

// RefreshToken model
model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// Academic Year model
model AcademicYear {
  id        String   @id @default(cuid())
  name      String   @unique // e.g., "2025-2026"
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true) // To mark the current/active year
  createdAt DateTime @default(now())

  classes Class[]

  @@map("academic_years")
}

// Class Template model
model ClassTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  isActive  Boolean  @default(true) // For soft-deletion
  createdAt DateTime @default(now())

  classes Class[]

  @@map("class_templates")
}

// Class model
model Class {
  id          String   @id @default(cuid())
  level       Level
  maxCapacity Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])

  templateId String
  template   ClassTemplate @relation(fields: [templateId], references: [id])

  teacherId String?
  teacher   User?   @relation("TeacherClasses", fields: [teacherId], references: [id])

  enrollments Enrollment[]

  @@unique([academicYearId, templateId], name: "unique_class_in_year")
  @@map("classes")
}

// Student model
model Student {
  id             String        @id @default(cuid())
  firstName      String
  lastName       String
  dateOfBirth    DateTime
  photoUrl       String?
  enrollmentDate DateTime      @default(now())
  status         StudentStatus @default(PENDING_APPROVAL)

  // Detailed fields from the physical registration form
  homeAddress             String?
  homePhone               String?
  grandfatherName         String?
  siblingsCount           Int                  @default(0)
  pickupPerson            String?
  personalityTraits       Json?
  fears                   Json?
  favoriteColors          Json?
  favoriteFoods           Json?
  favoriteAnimals         Json?
  forcedToEat             Boolean?
  doctorName              String?
  doctorPhone             String?
  specialConditions       String?
  emergencyContactAddress String?
  emergencyContactName    String?
  emergencyContactPhone   String?
  parentsMaritalStatus    ParentMaritalStatus?

  // Relations
  enrollments Enrollment[]
  guardians   StudentGuardianRelation[]

  @@map("students")
}

// Guardian model
model Guardian {
  id             String                    @id @default(cuid())
  name           String
  phone          String                    @unique
  dateOfBirth    DateTime?
  educationLevel String?
  occupation     String?
  createdAt      DateTime                  @default(now())
  updatedAt      DateTime                  @updatedAt
  // Relations
  students       StudentGuardianRelation[]
  userId         String?                   @unique
  user           User?                     @relation(fields: [userId], references: [id])

  @@map("guardians")
}

model StudentGuardianRelation {
  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  guardianId String
  guardian   Guardian @relation(fields: [guardianId], references: [id])

  relationToChild String

  @@id([studentId, guardianId])
  @@map("student_guardian_relations")
}

// Enrollment model
model Enrollment {
  id                   String               @id @default(cuid())
  enrollmentDate       DateTime             @default(now())
  status               EnrollmentStatus     @default(PENDING)
  registrationType     RegistrationType     @default(NORMAL)
  transportationMethod TransportationMethod @default(WALK)
  // Foreign Keys
  studentId            String
  student              Student              @relation(fields: [studentId], references: [id])
  classId              String
  class                Class                @relation(fields: [classId], references: [id])

  @@map("enrollments")
}

// Enums
enum UserRole {
  ADMIN
  SUPERVISOR
  TEACHER
  GUARDIAN
}

enum StudentStatus {
  PENDING_APPROVAL
  ACTIVE
  REJECTED
  GRADUATED
  WITHDRAWN
}

enum RegistrationType {
  NORMAL
  TEMPORARY
}

enum Level {
  KG1
  KG2
  KG3
  FIRST_GRADE
}

enum EnrollmentStatus {
  PENDING
  ACTIVE
  COMPLETED
  WITHDRAWN
}

enum ParentMaritalStatus {
  TOGETHER
  SEPARATED
  OTHERS
}

enum TransportationMethod {
  BUS
  WALK
}
